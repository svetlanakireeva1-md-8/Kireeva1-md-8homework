    #14_2(переводчик)
    from googletrans import Translator
from PyQt5 import QtWidgets
from pere import Ui_MainWindow
class Main(QtWidgets.QMainWindow):
    def __init__(self):
        super(Main, self).__init__()
        self.pere = Ui_MainWindow()
        self.init_UI()
        self.pere.setupUi(self)
    def init_UI(self):
        self.pere.textEdit.clear()
        self.pere.pushButton_2.clicked.connect(self.translate)
        self.pere.pushButton.clicked.connect(self.clear)
    def translate(self):
        text_1 = self.textEdit.toPlainText()
        lang_1 = self.comboBox.currentText()
        lang_2 = self.comboBox_2.currentText()
        translator = Translator()
        t = translator.translate(text_1, src=lang_1, dest=lang_2)
        self.textEdit_2.setText(t.text)
    def clear(self):
        self.textEdit.clear()
        self.textEdit_2.clear()
if __name__ == "__main__":
    import sys
    app = QtWidgets.QApplication(sys.argv)
    MainWindow = QtWidgets.QMainWindow()
    pere = Ui_MainWindow()
    pere.setupUi(MainWindow)
    MainWindow.show()
    sys.exit(app.exec_())
    
    
